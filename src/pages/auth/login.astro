<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="robots" content="noindex, nofollow" />
    <title>Login - Masjid Al-Fatimah</title>
    <style>
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }

      body {
        font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto,
          "Helvetica Neue", Arial, sans-serif;
        background: linear-gradient(135deg, #1a4d5e 0%, #0a2533 100%);
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 1rem;
      }

      .login-container {
        background: white;
        padding: 3rem;
        border-radius: 12px;
        box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
        max-width: 400px;
        width: 100%;
      }

      .login-header {
        text-align: center;
        margin-bottom: 2rem;
      }

      .login-header h1 {
        font-size: 1.75rem;
        color: #1a4d5e;
        margin-bottom: 0.5rem;
      }

      .login-header p {
        color: #666;
        font-size: 0.95rem;
      }

      .login-form {
        display: flex;
        flex-direction: column;
        gap: 1.5rem;
      }

      .form-group {
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
      }

      label {
        font-weight: 600;
        color: #333;
        font-size: 0.95rem;
      }

      input[type="password"] {
        padding: 0.875rem 1rem;
        border: 2px solid #e0e0e0;
        border-radius: 8px;
        font-size: 1rem;
        transition: all 0.3s ease;
      }

      input[type="password"]:focus {
        outline: none;
        border-color: #3abfdf;
        box-shadow: 0 0 0 3px rgba(58, 191, 223, 0.1);
      }

      .btn-login {
        padding: 1rem;
        background: #3abfdf;
        color: white;
        border: none;
        border-radius: 8px;
        font-size: 1rem;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s ease;
      }

      .btn-login:hover {
        background: #2da5c5;
        transform: translateY(-2px);
        box-shadow: 0 6px 20px rgba(58, 191, 223, 0.4);
      }

      .btn-login:active {
        transform: translateY(0);
      }

      .error-message {
        background: #fee;
        color: #c33;
        padding: 0.875rem;
        border-radius: 8px;
        border-left: 4px solid #c33;
        font-size: 0.9rem;
      }

      .info-message {
        background: #e8f4f8;
        color: #1a4d5e;
        padding: 0.875rem;
        border-radius: 8px;
        border-left: 4px solid #3abfdf;
        font-size: 0.85rem;
        margin-top: 1.5rem;
      }

      @media (max-width: 640px) {
        .login-container {
          padding: 2rem;
        }

        .login-header h1 {
          font-size: 1.5rem;
        }
      }
    </style>
  </head>
  <body>
    <div class="login-container">
      <div class="login-header">
        <h1>Masjid Al-Fatimah</h1>
        <p>Please enter the password to continue</p>
      </div>

      <form method="POST" class="login-form">
        {error && <div class="error-message">{error}</div>}

        <div class="form-group">
          <label for="password">Password</label>
          <input
            type="password"
            id="password"
            name="password"
            required
            autofocus
            placeholder="Enter password"
          />
        </div>

        <button type="submit" class="btn-login">Login</button>
      </form>

      <div class="info-message">
        This website is currently password-protected. Please contact the
        administrator if you need access.
      </div>
    </div>
  </body>
</html>
